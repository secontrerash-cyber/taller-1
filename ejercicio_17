import math

def calcular_circulo():
    radio = float(input("Ingrese el radio del círculo: "))
        area = math.pi * (radio ** 2)
    longitud = 2 * math.pi * radio
    
    print(f"Área del círculo: {area:.2f}")
    print(f"Longitud de la circunferencia: {longitud:.2f}")
calcular_circulo()
